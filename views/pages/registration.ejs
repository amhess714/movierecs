<!-- views/pages/registration.ejs 
    Contains sole registration form for the app
-->

<% include ../partials/head %>

<% include ../partials/header %>

<!-- include script to determine when "Password Mismatch" alert is displayed -->
<script src="/static/js/registrationForm.script.js"></script>

<div class="container my-5" style="width: 45%;">

    <h2 class="text-center c-text">Registration</h2>

    <form action="/register" method="POST">
    
        <div class="form-group">
            <label class="c-text" for="regEmail">Email Address</label>
            <input class="form-control" type="email" id="regEmail" name="email" placeholder="Email Address">
        </div>

        <div class="form-group">
            <label class="c-text" for="regUsername">Username</label>
            <input class="form-control" type="text" id="regUsername" name="username" placeholder="Username">
        </div>

        <div class="form-group">
            <label class="c-text" for="regFirstName">First Name</label>
            <input class="form-control" type="text" id="regFirstName" name="fName" placeholder="First Name">
        </div>

        <div class="form-group">
            <label class="c-text" for="regLastName">Last Name</label>
            <input class="form-control" type="text" id="regLastName" name="lName" placeholder="Last Name">
        </div>

        <div class="form-group">
            <label class="c-text" for="regPW">Password</label>
            <input class="form-control" type="password" id="regPW" name="password" placeholder="Password">
        </div>

        <div class="form-group">
            <label class="c-text" for="regPWConfirm">Confirm Password</label>
            <input class="form-control" type="password" id="regPWConfirm" placeholder="Confirm Password">
        </div>

        <button class="btn btn-success" disabled=true type="submit" id="regSubmit">Sign Up</button>

        <!-- Javascript interactive alert message that becomes unhidden if the passwords do not match -->
        <div class="alert alert-danger" hidden=true role="alert" id="regPWMessage">
            Passwords do not match!
        </div>
    
    </form>

</div>

<% include ../partials/foot %>